{
    "compilerOptions": {
        "composite": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "ES2022",

        "outDir": "dist",

        "strict": true,
        // "noUncheckedIndexedAccess": true,

        "moduleResolution": "bundler",
        // "noEmit": true,
        // "allowImportingTsExtensions": true,
        "module": "ESNext",

        "allowJs": true,

        "sourceMap": true,

        "declaration": true,
        "declarationMap": true,

        "isolatedModules": true,

        // "inlineSourceMap": true,
        // "inlineSources": true,

        "useDefineForClassFields": true,
        "noEmit": true,

        "types": ["vite/client", "vite-plugin-glsl/ext", "vitest/importMeta"],

        "rootDir": "src"
    },
    "include": ["src"]
}
